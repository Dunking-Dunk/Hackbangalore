generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  address1    String
  city        String
  state       String
  postalCode  String
  dateOfBirth String
  ssn         String @unique
  email       String @unique
  password    String
  company Company?
  smeLoan Loan[]
}

model Company {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email  String @unique
  address String
  user User @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId
  smeLoan Loan[]
}

enum Status {
  PROCESSING
  APPROVED
  DECLINED
}

model Loan {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  pan String @unique
  bankName String
  accountNumber String @unique
  reason String 
  loanAmount Float 
  quotation String 
  bankStatement String
  balanceSheet String
  status Status @default(PROCESSING)
  ITR String
  udayam String
  cashFlow String
  user User @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId
  company Company @relation(fields: [companyId], references: [id])
  companyId String @unique @db.ObjectId
}